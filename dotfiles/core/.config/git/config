[include]
    path = ~/.config/git/include

[color]
    diff = auto
    status = auto

[color "status"]
    added = magenta
    changed = green
    untracked = cyan

[alias]
    undo = reset --soft HEAD^
    st = status -sb
    ci = commit
    co = checkout
    graph = log --graph --abbrev-commit --date=relative --all --format=format:'%C(bold blue)%h%C(reset) - %s %C(bold yellow)%d%C(reset)'

[push]
    default = simple

[pull]
    ff = only

[init]
    defaultBranch = main

